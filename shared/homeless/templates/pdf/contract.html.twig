        <td colspan="5"></td>
    </tr>
    <tr>
        <td colspan="4">
            Организация
        </td>
        <td colspan="1">
            Благополучатель
        </td>
    </tr>
    <tr>
        <td colspan="3">
            {{ org_contacts_full|join('<br/>')|raw }}
            {{ specialty }} {{ user.fullName }}.
            {% if user.passport %}
                Паспорт {{ user.passport }}
            {% endif %}
            <br/>
        </td>
        <td colspan="1">
        </td>
        <td colspan="1">
            {{ client.fullName }}, {{ client.birthDate|date('d.m.Y') }} г.р.
        </td>
    </tr>
</table>
